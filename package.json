{
  "name": "sigle",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "start": "NODE_ENV=production node .next/server",
    "build": "yarn relay && yarn build:server && yarn build:client",
    "build:server": "NODE_ENV=production tsc --project tsconfig.server.json",
    "build:client": "tsc --noEmit && NODE_ENV=production next build",
    "relay": "ts-node --project tsconfig.scripts.json scripts/generateGraphqlSchema.ts > ./schema.graphql && relay-compiler --src ./client --schema ./schema.graphql --extensions ts tsx --language typescript",
    "analyze": "BUNDLE_ANALYZE=both next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "test": "yarn test:lint",
    "test:lint": "eslint '{pages,client,server}/**/*.{js,ts,tsx}'",
    "prettier": "prettier --write '**/*.{js,ts,tsx,md}'"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@convertkit/slate-lists": "0.2.4",
    "@reach/dialog": "0.3.0",
    "@reach/menu-button": "0.3.0",
    "@reach/tabs": "0.3.0",
    "@sentry/browser": "5.7.0",
    "@sentry/node": "5.7.0",
    "@tippy.js/react": "2.2.3",
    "blockstack": "19.3.0",
    "body-parser": "1.19.0",
    "date-fns": "2.4.1",
    "dompurify": "1.0.11",
    "dotenv": "8.1.0",
    "express": "4.17.1",
    "express-graphql": "0.9.0",
    "graphql": "14.5.7",
    "graphql-relay": "0.6.0",
    "helmet": "3.21.1",
    "history": "4.10.1",
    "immutable": "4.0.0-rc.12",
    "isomorphic-unfetch": "3.0.0",
    "jsdom": "15.2.0",
    "mongo-relay-connection": "0.2.7",
    "mongodb": "3.3.2",
    "mongoose": "5.7.5",
    "next": "9.1.1",
    "radiks": "0.3.0-beta.1",
    "radiks-server": "1.1.0-beta.3",
    "react": "16.10.2",
    "react-blockstack-button": "0.1.0",
    "react-dom": "16.10.2",
    "react-dropzone": "10.1.10",
    "react-helmet": "5.2.1",
    "react-icons": "3.7.0",
    "react-relay": "6.0.0",
    "react-spring": "8.0.27",
    "react-toastify": "5.3.2",
    "slate": "0.47.8",
    "slate-html-serializer": "0.8.10",
    "slate-plain-serializer": "0.7.10",
    "slate-react": "0.22.8",
    "slate-soft-break": "0.9.0",
    "styled-components": "4.4.0",
    "typeface-libre-baskerville": "0.0.72",
    "typeface-roboto": "0.0.75"
