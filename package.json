{
  "name": "sigle",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "start": "NODE_ENV=production node .next/server",
    "build": "yarn relay && yarn build:server && yarn build:client",
    "build:server": "NODE_ENV=production tsc --project tsconfig.server.json",
    "build:client": "tsc --noEmit && NODE_ENV=production next build",
    "relay": "ts-node --project tsconfig.scripts.json scripts/generateGraphqlSchema.ts > ./schema.graphql && relay-compiler --src ./client --schema ./schema.graphql --extensions ts tsx --language typescript",
    "analyze": "BUNDLE_ANALYZE=both next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "test": "yarn test:lint && yarn test:prettier",
    "test:lint": "eslint '{pages,client,server}/**/*'",
    "test:prettier": "prettier --list-different '**/*.{js,ts,tsx,md}'",
    "prettier": "prettier --write '**/*.{js,ts,tsx,md}'"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@reach/dialog": "0.2.9",
    "@reach/menu-button": "0.1.18",
    "@reach/tabs": "0.1.6",
    "@sentry/browser": "5.5.0",
    "@sentry/node": "5.5.0",
    "@tippy.js/react": "2.2.2",
    "blockstack": "19.2.2",
    "body-parser": "1.19.0",
    "date-fns": "1.30.1",
    "dompurify": "1.0.11",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "express-graphql": "0.9.0",
    "graphql": "14.4.2",
    "graphql-relay": "0.6.0",
    "helmet": "3.20.0",
    "history": "4.9.0",
    "immutable": "4.0.0-rc.12",
    "isomorphic-unfetch": "3.0.0",
    "jsdom": "15.1.1",
    "mongo-relay-connection": "0.2.6",
    "mongodb": "3.2.7",
    "mongoose": "5.6.6",
    "nanoid": "2.0.3",
    "next": "9.0.2",
    "radiks": "0.2.1",
    "radiks-server": "1.0.0-beta.1",
    "react": "16.8.6",
    "react-blockstack-button": "0.1.0",
    "react-dom": "16.8.6",
    "react-dropzone": "10.1.6",
    "react-helmet": "5.2.1",
    "react-icons": "3.7.0",
    "react-relay": "5.0.0",
    "react-router-dom": "5.0.1",
    "react-toastify": "5.3.2",
    "slate": "0.47.4",
    "slate-html-serializer": "0.8.6",
    "slate-plain-serializer": "0.7.6",
    "slate-react": "0.22.4",
    "slate-soft-break": "0.9.0",
    "styled-components": "4.3.2",
    "typeface-libre-baskerville": "0.0.72",
