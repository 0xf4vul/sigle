{
  "name": "sigle",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "start": "node .next/server",
    "build": "yarn build:server && yarn build:client",
    "build:server": "NODE_ENV=production tsc --project tsconfig.server.json",
    "build:client": "tsc --noEmit && NODE_ENV=production next build",
    "analyze": "BUNDLE_ANALYZE=both next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "test": "yarn test:lint && yarn test:prettier",
    "test:lint": "eslint '{pages,client,server}/**/*'",
    "test:prettier": "prettier --list-different '**/*.{js,ts,tsx,md}'",
    "prettier": "prettier --write '**/*.{js,ts,tsx,md}'"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@sentry/browser": "5.1.2",
    "@sentry/node": "5.1.2",
    "@tippy.js/react": "2.1.2",
    "blockstack": "19.1.0",
    "body-parser": "1.19.0",
    "date-fns": "1.30.1",
    "dompurify": "1.0.10",
    "express": "4.16.4",
    "helmet": "3.18.0",
    "history": "4.9.0",
    "immutable": "4.0.0-rc.12",
    "nanoid": "2.0.1",
    "next": "8.1.0",
    "radiks": "0.2.0",
    "radiks-server": "^0.1.11",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-helmet": "5.2.1",
    "react-icons": "3.6.1",
    "react-router-dom": "5.0.0",
    "react-toastify": "5.1.0",
    "rebass": "3.1.0",
    "slate": "0.46.1",
    "slate-html-serializer": "0.8.1",
    "slate-plain-serializer": "0.7.1",
    "slate-react": "0.21.24",
    "slate-soft-break": "0.9.0",
    "styled-components": "4.2.0",
    "styled-reset": "2.0.10",
    "the-platform": "0.9.3",
    "typeface-libre-baskerville": "0.0.72",
    "typeface-roboto": "0.0.54"
  },
  "devDependencies": {
    "@craco/craco": "3.6.0",
    "@types/dompurify": "0.0.32",
    "@types/express": "4.16.1",
    "@types/helmet": "0.0.43",
    "@types/jest": "24.0.12",
    "@types/nanoid": "1.2.1",
    "@types/next": "8.0.5",
    "@types/node": "11.13.7",
    "@types/react": "16.8.16",
    "@types/react-dom": "16.8.4",
    "@types/react-helmet": "5.0.8",
    "@types/react-router-dom": "4.3.3",
    "@types/rebass": "3.0.3",
    "@types/slate": "0.44.3",
    "@types/slate-html-serializer": "0.6.3",
    "@types/slate-plain-serializer": "0.6.1",
    "@types/slate-react": "0.21.2",
    "@types/styled-components": "4.1.14",
    "@typescript-eslint/eslint-plugin": "1.7.0",
    "@typescript-eslint/parser": "1.7.0",
    "@zeit/next-bundle-analyzer": "0.1.2",
    "@zeit/next-css": "1.0.1",
    "@zeit/next-typescript": "1.1.1",
    "babel-plugin-macros": "2.5.1",
    "babel-plugin-styled-components": "1.10.0",
    "craco-blockstack": "1.0.2",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.13.0",
    "husky": "2.2.0",
    "lint-staged": "8.1.6",
    "next-compose-plugins": "2.2.0",
    "nodemon": "1.19.0",
    "prettier": "1.17.0",
    "react-scripts": "2.1.8",
    "tailwind.macro": "1.0.0-alpha.2",
    "tailwindcss": "1.0.0-beta.4",
    "ts-node": "8.1.0",
    "typescript": "3.4.5",
    "webpack-bundle-analyzer": "3.3.2"
  }
}
