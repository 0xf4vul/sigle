{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": ".next",
    "noEmit": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true
  },
  "include": ["pages", "client"],
  "exclude": ["node_modules", ".next", "server"]
}
